<odoo>
    <data>
        
        <record id="estate_type_list_view" model="ir.ui.view">
            <field name="name">estate_type_list</field>
            <field name="model">estate.type</field>
            <field name="arch" type="xml">
                <list string="Type List">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="estate_type_form_view" model="ir.ui.view">
            <field name="name">estate_type_form</field>
            <field name="model">estate.type</field>
            <field name="arch" type="xml">
                <form string="Type Form">
                    <sheet>
                        <header>
                            <button name="%(estate_offer_action)d" 
                                type="action" 
                                icon="fa-money" 
                                class="oe_stat_button">
                                <field name="offer_count" widget="statinfo"/>
                            </button>
                        </header>
    
                        <div>
                            <h1><field name="name" nolabel="True"/></h1>
                        </div>
                        <notebook>
                            <page string="Properties">
                                <field name="property_ids">
                                    <list>
                                        <field name="name" width="300"/>
                                        <field name="expected_price" width="50"/>
                                        <field name="state" width="100"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="estate_type_action" model="ir.actions.act_window">
            <field name="name">Properties Type</field>
            <field name="res_model">estate.type</field>
            <field name="view_mode">list,form</field>
        </record>
        
    </data>
</odoo>