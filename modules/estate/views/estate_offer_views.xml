<odoo>
    <data>

        <record id="estate_offer_list_view" model="ir.ui.view">
            <field name="name">estate_offer_list</field>
            <field name="model">estate.offer</field>
            <field name="arch" type="xml">
                <list editable="bottom" decoration-success="status=='0'" decoration-danger="status=='1'">
                    <field name="price" width="100"/>
                    <field name="partner_id" width="100"/>
                    <field name="validity" width="100"/>
                    <field name="date_deadline" width="100"/>
                    
                    <button name="action_accept_offer" type="object" title="Accept" icon="fa-check" width="15" invisible="status in('0', '1')"/>
                    <button name="action_refuse_offer" type="object" title="Refuse" icon="fa-times" width="15" invisible="status in('0', '1')"/>
                    
                    <field name="status" width="100" column_invisible="True"/>
                </list>
            </field>
        </record>

        <record id="estate_offer_form_view" model="ir.ui.view">
            <field name="name">estate_offer_form</field>
            <field name="model">estate.offer</field>
            <field name="arch" type="xml">
                <form string="Offer Form">
                    <sheet>
                        <group>
                            <field name="price"/>
                            <field name="partner_id"/>
                            <field name="validity"/>
                            <field name="date_deadline"/>
                            <field name="status"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="estate_offer_action" model="ir.actions.act_window">
            <field name="name">Property Offers</field>  
            <field name="res_model">estate.offer</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('property_type_id','=', active_id)]</field>
        </record>

    </data>
</odoo>