<odoo>
    <data>

        <record id="estate_property_search_view" model="ir.ui.view">
            <field name="name">estate_property_search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search string="Properties Search">
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="expected_price"/>
                    <field name="bedrooms"/>
                    <field name="living_area" filter_domain="[('living_area','>=', self)]"/>
                    <field name="facades"/>
                    <separator/>
                    <filter string="Available" name="state" domain="['|',('state', '=', '0'),('state', '=', '1')]"/>
                    <group expand="1" string="Group By">
                        <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="estate_property_list_view" model="ir.ui.view">
            <field name="name">estate_property_list</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <list string="Properties List" decoration-success="state in('1', '2')" decoration-bf="state=='2'" decoration-muted="state=='3'">
                    <field name="name" width="100"/>
                    <field name="property_type_id" width="100"/>
                    <field name="postcode"  width="100"/>
                    <field name="tag_ids"  width="100" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <field name="bedrooms"  width="100"/>
                    <field name="living_area"  width="100"/>
                    <field name="expected_price"  width="100"/>
                    <field name="selling_price"  width="100"/>
                    <field name="date_availability"  width="100" optional="hidden"/>
                </list>
            </field>
        </record>

        <record id="estate_property_form_view" model="ir.ui.view">
            <field name="name">estate_property_form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="Properties Form">
                    <header>
                        <button name="action_sold_property" type="object" string="SOLD" invisible="state in('3','4')"/>
                        <button name="action_cancel_property" type="object" string="CANCEL" invisible="state in('3','4')"/>

                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div>
                            <h1 class="oe_title"><field name="name" nolable='True'/></h1>
                        </div>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        <group>
                            <group>
                                <field name="property_type_id" options="{'no_quick_create': true, 'no_create_edit': true}" decoration-info="property_type_id"/>
                                <field name="postcode"/>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                                <field name="best_price"/>
                                <field name="selling_price"/>
                            </group>
                        </group>
                        <notebook>  
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area" invisible="not garden"/>
                                    <field name="garden_orientation" invisible="not garden"/>
                                    <field name="total_area"/>
                                    <field name="active"/>
                                </group>
                            </page>
                            <page string="Offers">
                                <field name="offer_ids" readonly="state in('2', '3', '4')"/>
                            </page>
                            <page string="Other info">
                                <group>
                                    <field name="salesperson" decoration-info="salesperson"/>
                                    <field name="buyer" decoration-info="buyer"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="estate_property_kanban_view" model="ir.ui.view">
            <field name="name">estate_property_kanban</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <kanban default_group_by="property_type_id" groups_draggable="False">
                    <field name="state"/>
                    <templates>
                        <t t-name="card">
                            <div>
                                <div>
                                    <h2 class="oe_title"><field name="name" nolable='True'/></h2>
                                </div>
                                <div>Expected Price:
                                    <field name="expected_price"/>
                                </div>
                                <div t-if="record.state.raw_value == '1'">
                                    Best Price:
                                    <field name="best_price"/>
                                </div>
                                <div t-if="record.state.raw_value == '2'">
                                    Selling Price:
                                    <field name="selling_price"/>
                                </div>         
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>        
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="estate_property_action" model="ir.actions.act_window">
            <field name="name">Properties</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="context">{'search_default_state': True }</field>
        </record>
    </data>
</odoo>