<odoo>
    <data>
        
        <record id="estate_tags_list_view" model="ir.ui.view">
            <field name="name">estate_tags_list</field>
            <field name="model">estate.tags</field>
            <field name="arch" type="xml">
                <list editable="bottom">
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="estate_tags_form_view" model="ir.ui.view">
            <field name="name">estate_tags_form</field>
            <field name="model">estate.tags</field>
            <field name="arch" type="xml">
                <form string="Tags Form">
                    <sheet>
                        <div>
                            <h1><field name="name" nolabel="True"/></h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="estate_tags_action" model="ir.actions.act_window">
            <field name="name">Properties Tags</field>
            <field name="res_model">estate.tags</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>